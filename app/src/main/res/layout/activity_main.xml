<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:weightSum="1.0"
    android:background="#FFB7C5">
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.52"
        android:paddingBottom="0dp"
        >

        <FrameLayout

            android:layout_width="75dp"
            android:layout_height="100dp"
            android:paddingBottom="0dp"
            android:background="@drawable/smiley"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:id="@+id/frameLayout">
        </FrameLayout>


    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/button1"
        android:padding="10dp"
        android:textColor="#ffdb01"
        android:background="@drawable/roundedbutton"
        android:drawableLeft="@drawable/treatmentsymbol"
        android:drawableRight="@drawable/arrow1"
        android:text="TREATMENTS"
        android:textSize="35sp"
        android:layout_marginBottom="5dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/button2"
        android:padding="10dp"
        android:textColor="#ffdb01"
        android:background="@drawable/roundedbutton"
        android:drawableLeft="@drawable/doctorssymbol"
        android:drawableRight="@drawable/arrow1"
        android:text="DOCTOR'S"
        android:textSize="35sp"
        android:layout_marginBottom="5dp"
        android:onClick="alldoclist" />
    <Button
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:id="@+id/button3"
    android:padding="10dp"
    android:textColor="#ffdb01"
    android:background="@drawable/roundedbutton"
        android:drawableLeft="@drawable/chartsymbol"
        android:drawableRight="@drawable/arrow1"
    android:text="CHART"
        android:textSize="35sp"
        android:layout_marginBottom="5dp"
        android:onClick="chartb" />

    <Button
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:id="@+id/button4"
    android:padding="10dp"
    android:textColor="#ffdb01"
    android:background="@drawable/roundedbutton"
        android:drawableLeft="@drawable/notes1"
        android:drawableRight="@drawable/arrow1"
    android:text="NOTES"
        android:textSize="35sp"
        android:onClick="allnotelist" />

</LinearLayout>

