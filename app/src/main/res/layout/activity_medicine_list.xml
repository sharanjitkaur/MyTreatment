<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFB7C5"
    tools:context="com.sharanjit.mytreatment.medicine.MedicineList">

    <TextView android:text="Medicine List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/textViewmedlistheader" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New"
        android:id="@+id/bmedadd"
        android:layout_below="@+id/textViewmedlistheader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="medicinelistaddbuttonc" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/medicinelistview"
        android:layout_below="@+id/bmedadd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/bmedicinelistcancel"
        android:layout_below="@+id/textViewmedlistheader"
        android:layout_toRightOf="@+id/bmedadd"
        android:layout_toEndOf="@+id/bmedadd"
        android:onClick="medicinelistcancelbuttonc" />

</RelativeLayout>
