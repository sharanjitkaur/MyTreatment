<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFB7C5"
    tools:context="com.sharanjit.mytreatment.notes.NoteList">

    <TextView android:text="Notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/textViewnfhead" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New"
        android:id="@+id/bnoteadd"
        android:layout_below="@+id/textViewnfhead"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="notelistaddbuttonc" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notelistview"
        android:layout_below="@+id/bnoteadd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/bnotelistcancel"
        android:layout_below="@+id/textViewnfhead"
        android:layout_toRightOf="@+id/bnoteadd"
        android:layout_toEndOf="@+id/bnoteadd"
        android:onClick="notelistcancelbuttonc" />

</RelativeLayout>
